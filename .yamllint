extends: default

rules:
  line-length:
    max: 100
    level: warning

  indentation:
    spaces: 2
    level: error

  comments:
    min-spaces-from-content: 1
    level: warning

  document-start:
    present: false
    level: warning

  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
    level: error
