# REVENG Web Interface Environment Configuration
# =============================================

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
CLIENT_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration
MONGO_URI=mongodb://admin:password123@localhost:27017/reveng?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=reveng

# Redis Configuration
REDIS_URL=redis://:redis123@localhost:6379
REDIS_PASSWORD=redis123

# REVENG Integration
PYTHON_PATH=python3
ANALYZER_PATH=../tools/ai_enhanced_analyzer.py

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports
TEMP_DIR=./temp

# Analysis Configuration
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT=3600000  # 1 hour in milliseconds

# Worker Configuration (for scaling)
WORKER_CONCURRENCY=2
WORKER_REPLICAS=1

# Frontend Configuration
REACT_APP_SERVER_URL=http://localhost:5000

# Docker Registry (for Kubernetes deployment)
DOCKER_REGISTRY=reveng

# Deployment Configuration
VERSION=latest
ENVIRONMENT=development